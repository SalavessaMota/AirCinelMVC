@model AirCinelMVC.Data.Entities.Flight

@{
    ViewData["Title"] = "Edit";
}

<div class="col-md-8 offset-md-2 transparent-card">

    <h1>Edit Flight</h1>
    <hr />

    <div class="row">
        <div>
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <partial name="_Flights" />

                <flash dismissable="true" />

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary roundedwithshadow" />
                    <a asp-action="Index" class="btn btn-success roundedwithshadow">Back to List</a>
                </div>
            </form>

        </div>
    </div>
</div>

