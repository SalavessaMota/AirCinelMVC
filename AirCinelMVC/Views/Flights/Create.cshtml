@model AirCinelMVC.Data.Entities.Flight

@{
    ViewData["Title"] = "Create";
}


<div class="row">
    <div class="col-md-4 offset-md-4 transparent-card">

        <h1>Create Flight</h1>
        <hr />

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <partial name="_Flights" />

            <flash dismissable="true" />
            <div class="form-group">

                <input type="submit" value="Create" class="btn btn-primary shadow-lg" />
                <a asp-action="Index" class="btn btn-success shadow-lg">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}