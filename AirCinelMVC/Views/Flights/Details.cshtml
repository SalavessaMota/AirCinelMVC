@model AirCinelMVC.Data.Entities.Flight

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Flight</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DepartureAirport)
        </dt>
        <dd class="col-sm-10">
            @if (Model.DepartureAirport != null && !string.IsNullOrEmpty(Model.DepartureAirport.ImageFullPath))
            {
                <img src="@Url.Content(Model.DepartureAirport.ImageFullPath)" alt="@Model.DepartureAirport.Name" style="width: 30px; height: auto; max-width:100%;" />
            }
            @Model.DepartureAirport.Name
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ArrivalAirport)
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ArrivalAirport.ImageFullPath))
            {
                <img src="@Url.Content(Model.ArrivalAirport.ImageFullPath)" alt="@Model.ArrivalAirport.Name" style="width: 30px; height: auto; max-width:100%;" />
            }
            @Model.ArrivalAirport.Name
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DepartureTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DepartureTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ArrivalTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ArrivalTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Airplane)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Airplane.Manufacturer) @Html.DisplayFor(model => model.Airplane.Model)
            @if (this.User.Identity.IsAuthenticated && this.User.IsInRole("Admin"))
            {
                <span>- ID @Html.DisplayFor(model => model.Airplane.Id)</span>
            }
        </dd>
    </dl>
</div>
<div>
    @if (this.User.Identity.IsAuthenticated && this.User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning shadow-lg">Edit</a>
    }
    <a asp-action="Index" class="btn btn-success shadow-lg">Back to List</a>
</div>
