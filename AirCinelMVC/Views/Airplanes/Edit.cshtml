@model AirCinelMVC.Models.AirplaneViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Airplane</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ImageId" />

            <!-- Vista parcial para os campos de ManufacturerId e ModelId -->
            <partial name="_Airplanes" />


            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"></label>
                <input asp-for="ImageFile" class="form-control" type="file" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <img src="@Url.Content(Model.ImageFullPath)" alt="@Model.Model" style="width: 200px; height: auto; max-width:100%;" />
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-success">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script type="text/javascript">
        $(document).ready(function () {
            // IDs do fabricante e modelo previamente associados ao avião
            var selectedManufacturer = '@Model.ManufacturerId';
            var selectedModel = '@Model.ModelId';

            // Função para carregar os modelos com base no manufacturerId e pré-selecionar o modelo
            function loadModels(manufacturerId, selectedModel) {
                $("#ModelId").empty();
                $.ajax({
                    url: '@Url.Action("GetModelsAsync", "Airplanes")',
                    type: 'POST',
                    dataType: 'json',
                    data: { manufacturerId: manufacturerId },
                    success: function (models) {
                        $("#ModelId").append('<option value="0">(Select a model...)</option>');
                        $.each(models.$values, function (i, model) {
                            $("#ModelId").append('<option value="' + model.id + '">' + model.name + '</option>');
                        });

                        // Pré-seleciona o modelo APÓS garantir que os modelos foram carregados
                        if (selectedModel) {
                            $("#ModelId").val(selectedModel);
                        }
                    },
                    error: function (ex) {
                        alert('Failed to retrieve models.' + ex);
                    }
                });
            }

            // Função para exibir mensagem de erro no manufacturer
            function showManufacturerError() {
                if ($("#manufacturer-error").length === 0) {
                    $("#ManufacturerId").after('<span id="manufacturer-error" class="text-danger">Please select a valid manufacturer.</span>');
                }
            }

            // Função para esconder a mensagem de erro do manufacturer
            function hideManufacturerError() {
                $("#manufacturer-error").remove();
            }

            // Carrega o fabricante e os modelos quando a página for carregada
            if (selectedManufacturer && selectedManufacturer !== "0") {
                // Garante que o fabricante seja pré-selecionado
                $("#ManufacturerId").val(selectedManufacturer);

                // Carrega os modelos correspondentes ao fabricante selecionado
                loadModels(selectedManufacturer, selectedModel);
            }

            // Ao mudar o manufacturer, carrega os modelos correspondentes
            $("#ManufacturerId").change(function () {
                var manufacturerId = $(this).val();
                if (manufacturerId && manufacturerId !== "0") {
                    loadModels(manufacturerId, null);
                    hideManufacturerError();
                } else {
                    // Se o valor for 0, exibe a mensagem de erro
                    showManufacturerError();
                    $("#ModelId").empty(); // Limpa a lista de modelos
                }
            });

            // Verifica se o manufacturer é válido ao selecionar um modelo
            $("#ModelId").change(function () {
                var manufacturerId = $("#ManufacturerId").val();
                if (!manufacturerId || manufacturerId === "0") {
                    showManufacturerError();
                }
            });
        });
    </script>
}

