@model AirCinelMVC.Models.AirplaneViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Airplane</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <partial name="_Airplanes" />


            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"></label>
                <input asp-for="ImageFile" class="form-control" type="file" required/>
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script type="text/javascript">
        $(document).ready(function () {
            // Quando o utilizador muda o ManufacturerId
            $("#ManufacturerId").change(function () {
                var manufacturerId = $("#ManufacturerId").val();
                console.log("Manufacturer selected: " + manufacturerId);

                $("#ModelId").empty(); // Limpa a combobox de modelos
                $("#ModelId").append('<option value="0">(Select a model...)</option>'); // Adiciona uma opção padrão

                $.ajax({
                    url: '@Url.Action("GetModelsAsync", "Airplanes")',
                    type: 'POST',
                    dataType: 'json',
                    data: { manufacturerId: manufacturerId },
                    success: function (response) {
                        console.log("Response received: ", response);

                        // Verifica se o objeto contém a propriedade $values
                        if (response && response.$values && response.$values.length > 0) {
                            $.each(response.$values, function (i, model) {
                                // Adiciona os modelos à combobox, verificando as propriedades
                                $("#ModelId").append('<option value="' + model.id + '">' + model.name + '</option>');
                            });
                        } else {
                            console.warn("No models found in the response.");
                        }
                    },
                    error: function (xhr, status, error) {
                        console.error("Error in AJAX request: ", error);
                    }
                });
            });

            // Quando o utilizador seleciona um modelo
            $("#ModelId").change(function () {
                var modelName = $("#ModelId option:selected").text();
                $("#Model").val(modelName); // Preenche o campo Model com o nome do modelo
            });
        });
    </script>
}
