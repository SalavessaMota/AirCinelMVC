@model AirCinelMVC.Data.Entities.Country

@{
    ViewData["Title"] = "Create";
}

<flash dismissable="true" />
<div class="row">
    <div class="col-md-4 offset-md-4 transparent-card">

        <h4>Create Country</h4>
        <hr />


        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <partial name="_Countries" />

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary shadow-lg" />
                <a asp-action="Index" class="btn btn-success shadow-lg">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
