@using Microsoft.AspNetCore.Identity
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AirCinelMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    @inject UserManager<AirCinelMVC.Data.Entities.User> UserManager

    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light mb-3">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="https://aircinelmvc.blob.core.windows.net/resources/logoAirCinel.jpg" alt="LogoAirCinel" height="30px" width="auto" />
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mr-auto">
                    @if (this.User.Identity.IsAuthenticated)
                    {
                        var user = await UserManager.FindByNameAsync(User.Identity.Name);

                        <li class="nav-item d-flex align-items-center text-dark">
                            @if (!string.IsNullOrEmpty(user?.ImageFullPath) && user.ImageFullPath != "https://aircinelmvc.azurewebsites.net/images/noimage.png")
                            {
                                <img src="@user.ImageFullPath" alt="Profile Picture" style="width: 30px; height: 30px; border-radius: 50%; margin-right: 10px;" />
                            }
                            Welcome, @user?.FullName
                        </li>
                    }
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    @if (this.User.Identity.IsAuthenticated && this.User.IsInRole("Admin"))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Admin</a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Admin" asp-action="ManageUsers">Admin Panel</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Airplanes" asp-action="Index">Airplanes</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Countries" asp-action="Index">Countries/Cities</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Airports" asp-action="Index">Airports</a></li>
                            </ul>
                        </li>
                    }

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Flights</a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            @if (this.User.Identity.IsAuthenticated && this.User.IsInRole("Employee"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Flights" asp-action="Index">Manage Flights</a>
                                </li>
                            }

                            @if (this.User.Identity.IsAuthenticated && (this.User.IsInRole("Employee") || this.User.IsInRole("Customer")))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Flights" asp-action="FlightHistory">Flights History</a>
                                </li>
                            }

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Flights" asp-action="UpcomingFlights">Upcoming Flights</a>
                            </li>
                        </ul>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>
                </ul>

                <ul class="navbar-nav ml-auto">
                    @if (this.User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item d-flex align-items-center">
                            <a class="nav-link text-dark d-flex align-items-center" asp-area="" asp-controller="Account" asp-action="ChangeUser">
                                Edit Account
                            </a>
                        </li>

                        <li class="nav-item d-flex align-items-center">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Logout">
                                Logout
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                        </li>
                    }
                </ul>
            </div>
        </nav>

    </header>
    <div class="container-fluid">
        <video id="bgVideo" autoplay loop muted preload="auto">
            <source src="https://aircinelmvc.blob.core.windows.net/resources/backgroundcompressed.mp4" type="video/mp4">
            Seu navegador não suporta vídeos em HTML5.
        </video>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - CINEL & AirCinel – Partners in training and innovation in aviation. - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
