@model AirCinelMVC.Data.Entities.User
@{
    ViewData["Title"] = "Details";
}

<h1>User Details</h1>

<div class="container">
    <div class="row justify-content-center">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UserName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FullName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FullName)
            <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Address)
            </dt>
            <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Address)
            </dd>
            <dt class="col-sm-2">
                City
            </dt>
            <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.City.Name)
            </dd>
        </dl>

        <div class="col-md-4">
            <img src="@Url.Content(Model.ImageFullPath)" alt="@Model.FullName" style="width: 400px; height: auto; max-width:100%; margin: 1em;" />
        </div>

        <br />
    </div>
    <div>
        <a asp-action="EditUser" asp-route-id="@Model.Id" class="btn btn-warning shadow-lg">Edit</a>
        <a asp-action="Index" class="btn btn-success shadow-lg">Back to List</a>
    </div>
</div>



