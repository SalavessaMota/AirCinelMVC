@model IEnumerable<AirCinelMVC.Data.Entities.User>
@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.25/css/dataTables.bootstrap4.min.css" />

<br />

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Users</h3>
            </div>
            <div class="card-body">
                <table class="table table-hover table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.FullName)
                            </th>
                            <th>
                                Avatar
                            </th>
                            <th>
                                Address
                            </th>
                            <th>
                                City
                            </th>

                            <th>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FullName)
                                </td>

                                <td>
                                    @if (!string.IsNullOrEmpty(item.ImageFullPath))
                                    {
                                        <img src="@Url.Content(item.ImageFullPath)" alt="@item.FullName" style="width: 50px; height: auto; max-width:100%;" />
                                    }
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Address)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.City.Name)
                                </td>

                                <td>
                                    <a asp-action="EditUser" asp-route-id="@item.Id" class="btn btn-warning"><i class="far fa-edit"></i></a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info"><i class="fas fa-list"></i></a>
                                    <a asp-action="DeleteUser" data-id="@item.Id" class="btn btn-danger btnDelete"><i class="fas fa-trash"></i></a>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


<div class="text-center">
    <a href="~/Admin/ManageUsersRoles" class="btn btn-primary btn-lg mt-3">Manage Users Roles</a>
    <a href="~/Admin/RegisterEmployee" class="btn btn-primary btn-lg mt-3">Register New Employee</a>
    <a href="~/Admin/RegisterCustomer" class="btn btn-primary btn-lg mt-3">Register New Customer</a>
    <a href="~/Home/index" class="btn btn-primary btn-lg mt-3"><i class="fas fa-home"></i> Return Home</a>
</div>

<div id="deleteDialog" class="modal fade">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><i class="fa fa-window-close"></i></button>
                <h4 class="modal-title">Delete</h4>
            </div>
            <div class="modal-body">
                <p>Do you want to delete this user?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" id="btnYesDelete">Delete</button>
                <button type="button" class="btn btn-success" id="btnNoDelete">No</button>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script type="text/javascript">
        $(document).ready(function () {
            var id = 0;
            // Captura o id do usuário ao clicar no botão "Delete"
            $('a.btnDelete').click(function () {
                id = $(this).data('id');  // Usa o data-id para obter o id
                $("#deleteDialog").modal('show');
                return false;
            });

            // Quando o botão "No" for clicado
            $("#btnNoDelete").click(function () {
                $("#deleteDialog").modal('hide');
                return false;
            });

            // Quando o botão "Yes" for clicado
            $("#btnYesDelete").click(function () {
                window.location.href = '/Admin/DeleteUser/' + id;
            });
        });
    </script>

    <script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.25/js/dataTables.bootstrap4.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#MyTable').DataTable();
        });
    </script>
}