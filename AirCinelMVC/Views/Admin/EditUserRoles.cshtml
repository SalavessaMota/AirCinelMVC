@model EditUserRolesViewModel

<form asp-action="EditUserRoles" method="post">
    <input type="hidden" asp-for="UserId" />
    <input type="hidden" asp-for="Email" />
    <input type="hidden" asp-for="Username" />

    <div class="form-group">
        <label asp-for="Username"></label>
        <input asp-for="Username" class="form-control" readonly />
    </div>

    <div class="form-group">
        @for (var i = 0; i < Model.Roles.Count; i++)
        {
            <div class="form-check">
                <input asp-for="Roles[i].IsSelected" class="form-check-input" />
                <label asp-for="Roles[i].IsSelected" class="form-check-label">@Model.Roles[i].RoleName</label>
                <input type="hidden" asp-for="Roles[i].RoleName" />
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
