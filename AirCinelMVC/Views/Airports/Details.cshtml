@model AirCinelMVC.Data.Entities.Airport

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Airport Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.ImageId)
        </dt>
        <dd class="col-sm-8">
            @if (!string.IsNullOrEmpty(Model.ImageFullPath))
            {
                <img src="@Url.Content(Model.ImageFullPath)" alt="@Model.Name" style="width: 150px; height: auto; max-width:100%;" />
            }
        </dd>
    </dl>
</div>

<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning shadow-lg">Edit</a>
    <a class="btn btn-secondary" asp-action="Index" class="btn btn-success shadow-lg">Back to List</a>
</div>
