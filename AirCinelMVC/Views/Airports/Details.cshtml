@model AirCinelMVC.Data.Entities.Airport

@{
    ViewData["Title"] = "Details";
}

<div class="col-md-4 offset-md-4">

    <h4>Airport Details</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>


    <div class="col-md-4">
        <img src="@Url.Content(Model.ImageFullPath)" alt="@Model.Name" style="width: 200px; height: auto; max-width:100%;" />
    </div>

    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning shadow-lg">Edit</a>
        <a asp-action="Index" class="btn btn-success shadow-lg">Back to List</a>
    </div>

</div>