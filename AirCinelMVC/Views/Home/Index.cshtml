@{
    ViewData["Title"] = "AirCinel - Home";
    Layout = "_Layout";
}
<div>
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" style="max-height: 50vh;">
            <div class="carousel-item active">
                <img src="https://aircinelmvc.blob.core.windows.net/resources/lisbon.jpeg" class="d-block w-100" alt="Lisbon Image">
                <div class="carousel-caption d-none d-md-block" style="top: 10%; transform: translateY(-10%);">

                    <h1 class="text-shadow">Welcome to AirCinel</h1>

                    <h3 class="light grey-text text-lighten-3">Soar high with the aviation experts in Lisbon.</h3>
                </div>
            </div>
            <div class="carousel-item">
                <img src="https://aircinelmvc.blob.core.windows.net/resources/madrid.jpeg" class="d-block w-100" alt="Madrid Image">
                <div class="carousel-caption d-none d-md-block" style="top: 10%; transform: translateY(-10%);">
                    <h1 class="text-shadow">What is your dream vacation destination?</h1>
                       
                    <h3 class="light grey-text text-lighten-3">We will take you there!</h3>
                </div>
            </div>
            <div class="carousel-item">
                <img src="https://aircinelmvc.blob.core.windows.net/resources/paris.jpeg" class="d-block w-100" alt="Paris Image">
                <div class="carousel-caption d-none d-md-block" style="top: 10%; transform: translateY(-10%);">
                    <h1 class="text-shadow">You can count on us!</h1>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>


<br />

<div class="container mb-3">
    <div class="row justify-content-between">
        <div class="col-sm-3 text-center">
            <a class="nav-link btn btn-primary" asp-action="Destinations">Destinations</a>
        </div>
        <div class="col-sm-3 text-center">
            <a class="nav-link btn btn-primary" asp-controller="Flights" asp-action="UpcomingFlights">Flights</a>
        </div>
        <div class="col-sm-3 text-center">
            <a class="nav-link btn btn-primary" asp-action="aboutus">About us</a>
        </div>
    </div>
</div>