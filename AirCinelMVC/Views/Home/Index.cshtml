@model IEnumerable<AirCinelMVC.Data.Entities.Flight>
@{
    ViewData["Title"] = "AirCinel - Home";
}
<div>
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
        </ol>
        <div class="carousel-inner mt-1" style="max-height: 60vh;">
            <div class="carousel-item active">
                <img src="https://aircinelmvc.blob.core.windows.net/resources/carrousel1.jpg" class="d-block w-100" alt="Welcome Image">
                <div class="carousel-caption d-none d-md-block" style="top: 20%; transform: translateY(-10%);">
                    <h1 class="text-shadow">Welcome to AirCinel</h1>
                    <h3 class="light grey-text text-lighten-3 text-shadow">Where every journey begins with excellence.</h3>
                </div>
            </div>

            <div class="carousel-item">
                <img src="https://aircinelmvc.blob.core.windows.net/resources/carrousel2.jpg" class="d-block w-100" alt="Dream Destination Image">
                <div class="carousel-caption d-none d-md-block" style="top: 20%; transform: translateY(-10%);">
                    <h1 class="text-shadow">What’s your next dream destination?</h1>
                    <h3 class="light grey-text text-lighten-3 text-shadow">Wherever it is, we’ll take you there.</h3>
                </div>
            </div>

            <div class="carousel-item">
                <img src="https://aircinelmvc.blob.core.windows.net/resources/carrousel3.jpg" class="d-block w-100" alt="Confidence in Air Travel Image">
                <div class="carousel-caption d-none d-md-block" style="top: 20%; transform: translateY(-10%);">
                    <h1 class="text-shadow">Travel with confidence.</h1>
                    <h3 class="light grey-text text-lighten-3 text-shadow">Your adventure, our priority.</h3>
                </div>
            </div>

            <div class="carousel-item">
                <img src="https://aircinelmvc.blob.core.windows.net/resources/carrousel4.jpg" class="d-block w-100" alt="Luxury Image">
                <div class="carousel-caption d-none d-md-block" style="top: 20%; transform: translateY(-10%);">
                    <h1 class="text-shadow">Luxury in every flight.</h1>
                    <h3 class="light grey-text text-lighten-3 text-shadow">Experience unparalleled comfort.</h3>
                </div>
            </div>

            <div class="carousel-item">
                <img src="https://aircinelmvc.blob.core.windows.net/resources/carrousel5.jpg" class="d-block w-100" alt="Memorable Journey Image">
                <div class="carousel-caption d-none d-md-block" style="top: 20%; transform: translateY(-10%);">
                    <h1 class="text-shadow">Every moment counts.</h1>
                    <h3 class="light grey-text text-lighten-3 text-shadow">Create memories with us.</h3>
                </div>
            </div>
        </div>

        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>



<br />

<div class="container">
    <div class="row justify-content-between">
        <div class="col-6 text-center">
            <a class="nav-link btn btn-primary" asp-action="Destinations"><i class="fas fa-map-marker-alt mr-1"></i>Destinations</a>
        </div>
        <div class="col-6 text-center">
            <a class="nav-link btn btn-primary" asp-action="aboutus"><i class="fas fa-info mr-1"></i>About us</a>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Upcoming Flights</h3>
            </div>
            <div class="card-body">
                <table class="table table-hover table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th>Flight Number</th>
                            <th><i class="fas fa-plane-departure"></i> Origin</th>
                            <th>Departure Time</th>
                            <th><i class="fas fa-plane-arrival"></i> Destination</th>
                            <th>Arrival Time</th>
                            <th><i class="fas fa-plane"></i> Airplane</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.FlightNumber</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.DepartureAirport.ImageFullPath))
                                    {
                                        <img src="@Url.Content(item.DepartureAirport.ImageFullPath)" alt="@item.DepartureAirport.Name" style="width: 30px; height: auto; max-width:100%;" />
                                    }
                                    @item.DepartureAirport.Name
                                </td>
                                <td>@item.DepartureTime.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.ArrivalAirport.ImageFullPath))
                                    {
                                        <img src="@Url.Content(item.ArrivalAirport.ImageFullPath)" alt="@item.ArrivalAirport.Name" style="width: 30px; height: auto; max-width:100%;" />
                                    }
                                    @item.ArrivalAirport.Name
                                </td>
                                <td>@item.ArrivalTime.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Airplane.ImageFullPath))
                                    {
                                        <img src="@Url.Content(item.Airplane.ImageFullPath)" alt="@item.Airplane.Model" style="width: 40px; height: auto; max-width:100%;" />
                                    }
                                    @item.Airplane.Manufacturer @item.Airplane.Model
                                </td>
                                <td>
                                    @if (User.Identity.IsAuthenticated && User.IsInRole("Customer"))
                                    {
                                        <a class="btn btn-primary" asp-controller="Flights" asp-action="PurchaseTicket" asp-route-flightId="@item.Id">
                                            <i class="fas fa-ticket-alt"></i> Buy Ticket
                                        </a>
                                    }
                                    else
                                    {
                                        <button type="button" class="btn btn-primary" onclick="showModal()">
                                            <i class="fas fa-ticket-alt"></i> Buy Ticket
                                        </button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div id="alertModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalLabel">Alert</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>You need a customer account to buy tickets.</p>
            </div>
            <div class="modal-footer">
                @if (!User.Identity.IsAuthenticated || !User.IsInRole("Customer"))
                {
                    <button type="button" class="btn btn-primary" id="btnLogin">Login</button>
                }
                <button type="button" class="btn btn-primary" id="btnRegister">Register</button>
                <button type="button" class="btn btn-secondary" id="btnReturn">Return</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script type="text/javascript">
        function showModal() {
            $('#alertModal').modal('show');
        }

        $('#btnLogin').click(function () {
            window.location.href = '@Url.Action("Login", "Account")';
        });

        $('#btnRegister').click(function () {
            window.location.href = '@Url.Action("Register", "Account")';
        });

        $('#btnReturn').click(function () {
            $('#alertModal').modal('hide');
        });
    </script>

    <script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.25/js/dataTables.bootstrap4.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#MyTable').DataTable();
        });
    </script>
}